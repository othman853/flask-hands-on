<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
  </head>
  <body>


    <form action="{{ url_for(operation) }}" method="post">
        <input type="text" name="name" />
        <input type="password" name="password" />

        {% if next %}
          <input type="hidden" name="next" value="{{next}}">
        {% endif %}

        <input type="submit" value="{{operation}}" />
    </form>

  </body>
</html>
